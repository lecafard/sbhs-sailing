{% extends 'base-logged-in.njk' %}

{% block title %}Data Entry{% endblock %}
{% block extra_head %}
<link rel="stylesheet" href="/styles/manage.css">
<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', () => {
    const
  });
</script>
<style media="screen">
  .data-entry-textbox {
    width: 100%;
    height: 100px;
    margin-bottom: 5px;
    font-size: 18px;
    padding: 10px;
  }

  .submit-button-small {
    margin-bottom: 40px;
  }

  h3 {
    margin: 0 0 5px;
  }

  p {
    margin: 0 0 20px;
  }
</style>
{% endblock extra_head %}

{% block content %}
<h2>Data Dump</h2>
<p>Copy the output from the Desktop application into the appropriate textbox.</p>
<h3>News</h3>
<textarea class="data-entry-textbox" placeholder="Stuff"></textarea>
<button class="trim-button submit-button-small" id="news-submit-button">Submit</button>
<h3>Rosters</h3>
<textarea class="data-entry-textbox" placeholder="Stuff"></textarea>
<button class="trim-button submit-button-small" id="rosters-submit-button">Submit</button>
<h3>Results</h3>
<textarea class="data-entry-textbox" placeholder="Stuff"></textarea>
<button class="trim-button submit-button-small" id="results-submit-button">Submit</button>
{% endblock %}
