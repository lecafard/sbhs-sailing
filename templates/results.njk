{% extends 'base-logged-in.njk' %}
{% set state = 'results' %}
{% block title %}Results{% endblock %}
{% block extra_head %}
<link rel="stylesheet" href="/styles/results.css">
<script src="/scripts/results.js"></script>
{% endblock extra_head %}

{% block content %}
<section class="results">
  <div class="top-bar">
    <h2 id="results-header">Results</h2>
    <label class="sort-label" for="results-sort">Sort by:</label>
    <select class="results-sort" id="results-sort">
      <option value="new" selected>New</option>
      <option value="old">Old</option>
    </select>
  </div>
  {# <section class="search-results">
    <input class="results-search-box" type="text" placeholder="Search">
  </section> #}
  <p class="results-message">Loading...</p>
</section>
{% endblock content %}
