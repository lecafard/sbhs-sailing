{% extends 'base-logged-in.njk' %}
{% set state = 'results' %}
{% block title %}Results{% endblock %}
{% block extra_head %}
<link rel="stylesheet" href="/styles/results.css">
{% endblock extra_head %}

{% block content %}
<section class="results">
  <h2 id="results-header">Results (show past, future, sort)</h2>
  <section class="search-results">
    <input class="results-search-box" type="text" placeholder="Search">
  </section>
  <p class="results-message">Loading...</p>
  <article class="result-item">
    <div class="result-event-header">
      <h3 class="result-event-name">CHS Sailing</h3>
      <h3 class="result-event-date">Date: 07-01-2018 to 09-01-2018</h3>
      <h3 class="result-event-location">Location: Woollahra Sailing Club</h3>
    </div>
    <table>
      <thead>
        <tr>
          <th>Position</th>
          <th>Skipper</th>
          <th>Crew</th>
          <th>Boat</th>
          <th>Sail Number</th>
          <th>Race 1</th>
          <th>Race 2</th>
          <th>Race 3</th>
          <th>Drop(s)</th>
          <th>Final Score</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>Dallas Yan</td>
          <td>Jarrod Khaw</td>
          <td>Lady Penrhyn</td>
          <td>18</td>
          <td>1</td>
          <td>1</td>
          <td>2</td>
          <td>2</td>
          <td>2</td>
        </tr>
        <tr>
          <td>1</td>
          <td>Patrick Han</td>
          <td>Jack Vorgias</td>
          <td>Sirius</td>
          <td>11</td>
          <td>2</td>
          <td>2</td>
          <td>1</td>
          <td>2</td>
          <td>3</td>
        </tr>
      </tbody>
    </table>
  </article>
</section>
